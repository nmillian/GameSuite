<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.nicole.gamesuite.MainActivity">

    <Button
        android:text="BattleShip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/background"
        android:layout_centerHorizontal="true"
        android:onClick = "battleshipClick" />

    <Button
        android:text="Connect 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick = "connect4Click"/>

    <Button
        android:text="Crazy 8s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick = "crazy8sClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/background"
        android:src = "@drawable/gamesuitelogo"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/background"
        android:layout_alignEnd="@+id/background">


        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:onClick="cancelClick"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp" />

        <Button
            android:text="Load Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            android:onClick="saveClick"
            android:layout_marginTop="130dp" />

        <Button
            android:text="New Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newgame"
            android:onClick="newClick"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>


    </LinearLayout>


</RelativeLayout>
