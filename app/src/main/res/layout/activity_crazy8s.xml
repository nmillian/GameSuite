<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crazy8s"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nicole.gamesuite.Crazy8sActivity">

    <TextView
        android:text="Computer Cards Remaining   - "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="35dp"
        android:id="@+id/computerCardsRemaining" />

    <TextView
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/computerCardsRemaining"
        android:layout_toRightOf="@+id/computerCardsRemaining"
        android:layout_toEndOf="@+id/computerCardsRemaining"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/textView2" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageButton2"
        android:layout_alignLeft="@+id/computerCardsRemaining"
        android:layout_alignStart="@+id/computerCardsRemaining"
        android:layout_marginTop="20dp"
        android:weightSum="6"
        android:id="@+id/tableLayout3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </TableLayout>

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/bluesquaregrid"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/computerCardsRemaining"
        android:layout_alignRight="@+id/computerCardsRemaining"
        android:layout_alignEnd="@+id/computerCardsRemaining"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="11dp" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/bluesquaregrid"
        android:id="@+id/imageButton"
        android:layout_above="@+id/tableLayout3"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />


</RelativeLayout>
